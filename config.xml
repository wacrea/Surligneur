<?xml version='1.0' encoding='utf-8'?>
<widget id="com.williamagay.fiveseconds" version="1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Surligneur</name>
    <description>
        A note application specially for books.
    </description>
    <author email="hello@williamagay.com" href="http://williamagay.com/">
        William AGAY
    </author>
    <access origin="*" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
</widget>